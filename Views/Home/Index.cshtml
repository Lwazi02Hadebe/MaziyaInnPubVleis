﻿@{
ViewData["Title"] = "Welcome to Maziya Inn & Pub";
Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #667eea;
            --secondary: #764ba2;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --dark: #343a40;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .role-selection-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .welcome-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: none;
            overflow: hidden;
        }

        .welcome-header {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }

        .role-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            height: 100%;
            background: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

            .role-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            }

        .role-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
        }

        .customer-icon {
            background: linear-gradient(135deg, #4CAF50, #45a049);
        }

        .admin-icon {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        }

        .manager-icon {
            background: linear-gradient(135deg, #48cae4, #0096c7);
        }

        .feature-list {
            list-style: none;
            padding: 0;
        }

            .feature-list li {
                padding: 0.5rem 0;
                border-bottom: 1px solid #eee;
            }

                .feature-list li:last-child {
                    border-bottom: none;
                }

            .feature-list i {
                color: var(--primary);
                margin-right: 0.5rem;
            }

        .security-notice {
            background: #fff3cd;
            border-left: 4px solid var(--warning);
            padding: 1rem;
            border-radius: 5px;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="role-selection-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card welcome-card">
                        <!-- Welcome Header -->
                        <div class="welcome-header">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-md-start text-center">
                                    <h1 class="display-4 fw-bold mb-3">Welcome to Maziya Inn & Pub</h1>
                                    <p class="lead mb-0">Premium Dining & Entertainment Experience</p>
                                </div>
                                <div class="col-md-4 text-md-end text-center">
                                    <i class="fas fa-utensils fa-4x opacity-75"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Messages -->
                        <div class="container mt-4">
                            @if (ViewBag.SuccessMessage != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>
                                    @ViewBag.SuccessMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    @ViewBag.ErrorMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }
                        </div>

                        <!-- Role Selection Cards -->
                        <div class="container py-5">
                            <div class="row g-4">
                                <!-- Customer Card -->
                                <div class="col-md-4">
                                    <div class="card role-card" onclick="selectRole('customer')">
                                        <div class="card-body text-center p-4">
                                            <div class="role-icon customer-icon text-white">
                                                <i class="fas fa-users"></i>
                                            </div>
                                            <h3 class="card-title mb-3">Customer</h3>
                                            <p class="card-text text-muted mb-4">
                                                Browse our menu, place orders, book events, and manage your account.
                                            </p>
                                            <div class="feature-list text-start mb-4">
                                                <li><i class="fas fa-check"></i> Order Food & Drinks</li>
                                                <li><i class="fas fa-check"></i> Book Events & Tickets</li>
                                                <li><i class="fas fa-check"></i> Track Your Orders</li>
                                                <li><i class="fas fa-check"></i> Manage Your Profile</li>
                                            </div>
                                            <div class="d-grid gap-2">
                                                <a href="@Url.Action("Login", "Customer")" class="btn btn-outline-success me-2">Login</a>
                                                <a href="@Url.Action("Register", "Customer")" class="btn btn-success">Register</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Admin Card -->
                                <div class="col-md-4">
                                    <div class="card role-card" onclick="selectRole('admin')">
                                        <div class="card-body text-center p-4">
                                            <div class="role-icon admin-icon text-white">
                                                <i class="fas fa-cog"></i>
                                            </div>
                                            <h3 class="card-title mb-3">Administrator</h3>
                                            <p class="card-text text-muted mb-4">
                                                Full system access for inventory management, user administration, and reporting.
                                            </p>
                                            <div class="feature-list text-start mb-4">
                                                <li><i class="fas fa-check"></i> System Configuration</li>
                                                <li><i class="fas fa-check"></i> User Management</li>
                                                <li><i class="fas fa-check"></i> Database Administration</li>
                                                <li><i class="fas fa-check"></i> Full Access Reports</li>
                                            </div>
                                            <div class="d-grid">
                                                <a href="@Url.Action("AdminLogin", "Auth")" class="btn btn-danger">Admin Login</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Manager Card -->
                                <div class="col-md-4">
                                    <div class="card role-card" onclick="selectRole('manager')">
                                        <div class="card-body text-center p-4">
                                            <div class="role-icon manager-icon text-white">
                                                <i class="fas fa-chart-line"></i>
                                            </div>
                                            <h3 class="card-title mb-3">Manager</h3>
                                            <p class="card-text text-muted mb-4">
                                                Oversee operations, authorize orders, manage staff, and view business reports.
                                            </p>
                                            <div class="feature-list text-start mb-4">
                                                <li><i class="fas fa-check"></i> Order Authorization</li>
                                                <li><i class="fas fa-check"></i> Staff Management</li>
                                                <li><i class="fas fa-check"></i> Business Reports</li>
                                                <li><i class="fas fa-check"></i> Inventory Oversight</li>
                                            </div>
                                            <div class="d-grid">
                                                <a href="@Url.Action("AdminLogin", "Auth")" class="btn btn-primary">Manager Login</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Security Notice -->
                            <div class="security-notice mt-5">
                                <div class="row align-items-center">
                                    <div class="col-md-1 text-center">
                                        <i class="fas fa-shield-alt fa-2x text-warning"></i>
                                    </div>
                                    <div class="col-md-11">
                                        <h6 class="mb-1">Security Notice</h6>
                                        <p class="mb-0 small">
                                            <strong>Customer accounts</strong> can be registered by anyone.
                                            <strong>Admin and Manager accounts</strong> are pre-configured for authorized staff only
                                            and cannot be registered through this portal. All access is monitored and logged.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Info -->
                            <div class="row mt-4">
                                <div class="col-md-4 text-center">
                                    <i class="fas fa-lock text-primary fa-2x mb-2"></i>
                                    <h6>Secure Authentication</h6>
                                    <p class="small text-muted">Role-based access control with encrypted sessions</p>
                                </div>
                                <div class="col-md-4 text-center">
                                    <i class="fas fa-mobile-alt text-success fa-2x mb-2"></i>
                                    <h6>Mobile Friendly</h6>
                                    <p class="small text-muted">Optimized for all devices and screen sizes</p>
                                </div>
                                <div class="col-md-4 text-center">
                                    <i class="fas fa-clock text-info fa-2x mb-2"></i>
                                    <h6>24/7 Support</h6>
                                    <p class="small text-muted">Help available for all authorized users</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function selectRole(role) {
            console.log('Selected role:', role);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.role-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
</body>
</html>