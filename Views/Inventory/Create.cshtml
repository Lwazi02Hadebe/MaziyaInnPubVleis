
@model MaziyaInnPubVleis.Models.Inventory
@{
    ViewData["Title"] = "Add New Product";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Add New Product</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Inventory
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StockLevel" class="form-label"></label>
                        <input asp-for="StockLevel" class="form-control" type="number" min="0" />
                        <span asp-validation-for="StockLevel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MinimumStockLevel" class="form-label"></label>
                        <input asp-for="MinimumStockLevel" class="form-control" type="number" min="0" value="10" />
                        <span asp-validation-for="MinimumStockLevel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="UnitPrice" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R</span>
                            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CostPrice" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R</span>
                            <input asp-for="CostPrice" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="CostPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="SupplierId" class="form-label">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers">
                    <option value="">-- Select Supplier --</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check form-switch">
                <input asp-for="IsSixPack" class="form-check-input" type="checkbox" role="switch" />
                <label asp-for="IsSixPack" class="form-check-label"></label>
                <div class="form-text">Enable this for alcohol products that are sold in packs</div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Product
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Quick Tips</h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <ul class="list-unstyled">
                        <li>✓ Set realistic stock levels</li>
                        <li>✓ Configure minimum stock alerts</li>
                        <li>✓ Enable Six-Pack for alcohol products</li>
                        <li>✓ Select appropriate supplier</li>
                        <li>✓ Ensure cost price is lower than selling price</li>
                    </ul>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Auto-detect alcohol products and suggest six-pack
        document.getElementById('ProductName').addEventListener('blur', function() {
            const productName = this.value.toLowerCase();
            const isSixPackCheckbox = document.getElementById('IsSixPack');
            const alcoholKeywords = ['beer', 'lager', 'ale', 'stout', 'wine', 'whisky', 'whiskey', 'vodka', 'gin', 'rum'];
            
            const isAlcohol = alcoholKeywords.some(keyword => productName.includes(keyword));
            
            if (isAlcohol && !isSixPackCheckbox.checked) {
                if (confirm('This appears to be an alcohol product. Would you like to enable Six-Pack configuration?')) {
                    isSixPackCheckbox.checked = true;
                }
            }
        });
    </script>
}