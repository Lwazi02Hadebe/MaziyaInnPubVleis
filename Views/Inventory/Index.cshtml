﻿
@model IEnumerable<MaziyaInnPubVleis.Models.Inventory>
@{
    ViewData["Title"] = "Inventory";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Inventory Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
        <a href="@Url.Action("LowStock")" class="btn btn-sm btn-outline-warning ms-2">
            <i class="fas fa-exclamation-triangle"></i> Low Stock Alert
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Stock Level</th>
                <th>Unit Price</th>
                <th>Pack Type</th>
                <th>Supplier</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                    <td>
                        <span class="badge @(item.StockLevel <= item.MinimumStockLevel ? "bg-warning" : "bg-success")">
                            @item.StockLevel
                        </span>
                    </td>
                    <td>
                        @if (item.IsSixPack)
                        {
                            <span class="text-info" title="Six-Pack Price: R @item.UnitPrice.ToString("N2")">
                                R @item.SingleUnitPrice.ToString("N2")/unit
                            </span>
                        }
                        else
                        {
                            <span>R @item.UnitPrice.ToString("N2")</span>
                        }
                    </td>
                    <td>
                        @if (item.IsSixPack)
                        {
                            <span class="badge bg-info">Six-Pack</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Single</span>
                        }
                    </td>
                    <td>@(item.Supplier?.Name ?? "N/A")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="@Url.Action("Details", new { id = item.ProductId })" class="btn btn-outline-info" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-outline-primary" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-outline-danger" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i> No inventory items found.
        <a href="@Url.Action("Create")" class="alert-link">Add your first product</a>.
    </div>
}