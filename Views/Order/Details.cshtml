@model MaziyaInnPubVleis.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Order Details - #@Model.OrderId</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Order ID:</dt>
                    <dd class="col-sm-8">@Model.OrderId</dd>

                    <dt class="col-sm-4">Order Date:</dt>
                    <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @GetStatusBadgeClass(Model.Status)">
                            @Model.Status
                        </span>
                    </dd>

                    <dt class="col-sm-4">Customer:</dt>
                    <dd class="col-sm-8">@(Model.Customer?.Name ?? "Walk-in Customer")</dd>

                    <dt class="col-sm-4">Processed By:</dt>
                    <dd class="col-sm-8">@Model.ProcessedBy?.Username</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Financial Summary</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6">Subtotal:</dt>
                    <dd class="col-sm-6">R @((Model.TotalAmount - Model.VATAmount).ToString("N2"))</dd>

                    <dt class="col-sm-6">VAT (15%):</dt>
                    <dd class="col-sm-6">R @Model.VATAmount.ToString("N2")</dd>

                    <dt class="col-sm-6">Total Amount:</dt>
                    <dd class="col-sm-6"><strong>R @Model.TotalAmount.ToString("N2")</strong></dd>

                    <dt class="col-sm-6">Gross Profit:</dt>
                    <dd class="col-sm-6">
                        <span class="text-success">R @Model.GrossProfit.ToString("N2")</span>
                    </dd>

                    <dt class="col-sm-6">Profit Margin:</dt>
                    <dd class="col-sm-6">
                        <span class="text-success">@Model.ProfitMargin.ToString("N2")%</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Order Items</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total Price</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.Inventory?.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.UnitPrice.ToString("N2")</td>
                                    <td>R @item.TotalPrice.ToString("N2")</td>
                                    <td>
                                        @if (item.Inventory?.IsSixPack == true)
                                        {
                                            <span class="badge bg-info">Six-Pack</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Single</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Status == MaziyaInnPubVleis.Models.OrderStatus.Pending)
{
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h6>Order Actions</h6>
                    <form method="post" action="@Url.Action("UpdateStatus", new { orderId = Model.OrderId, status = MaziyaInnPubVleis.Models.OrderStatus.Completed })"
                          class="d-inline">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check"></i> Mark as Completed
                        </button>
                    </form>
                    <form method="post" action="@Url.Action("UpdateStatus", new { orderId = Model.OrderId, status = MaziyaInnPubVleis.Models.OrderStatus.Cancelled })"
                          class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i> Cancel Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@functions {
    private string GetStatusBadgeClass(MaziyaInnPubVleis.Models.OrderStatus status)
    {
        return status switch
        {
            MaziyaInnPubVleis.Models.OrderStatus.Completed => "bg-success",
            MaziyaInnPubVleis.Models.OrderStatus.Cancelled => "bg-danger",
            MaziyaInnPubVleis.Models.OrderStatus.Pending => "bg-warning",
            _ => "bg-secondary"
        };
    }
}
