@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Reports & Analytics</h1>
    </div>

    <div class="row">
        <!-- Sales Report Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Sales Report
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Revenue Analysis</div>
                            <p class="text-muted small mt-2">Generate detailed sales reports by date range</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <form method="post" action="@Url.Action("SalesReport", "Manager")" class="mt-3">
                        <div class="form-group">
                            <label class="small">Start Date</label>
                            <input type="date" name="startDate" class="form-control form-control-sm"
                                   value="@DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="form-group">
                            <label class="small">End Date</label>
                            <input type="date" name="endDate" class="form-control form-control-sm"
                                   value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm btn-block">
                            <i class="fas fa-download"></i> Generate Report
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Inventory Report Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Inventory Report
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Stock Analysis</div>
                            <p class="text-muted small mt-2">View inventory levels and valuations</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-boxes fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("InventoryReport", "Manager")" class="btn btn-success btn-sm btn-block">
                            <i class="fas fa-download"></i> View Inventory Report
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employee Attendance Report Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Employee Attendance
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Attendance Tracking</div>
                            <p class="text-muted small mt-2">Monitor employee attendance and schedules</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("EmployeeAttendanceReport", "Manager")" class="btn btn-info btn-sm btn-block">
                            <i class="fas fa-download"></i> View Attendance Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Report Options -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Additional Reports</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-wine-bottle fa-2x text-primary mb-3"></i>
                                    <h6>Beverage Sales</h6>
                                    <p class="text-muted small">Alcohol and beverage performance</p>
                                    <button class="btn btn-outline-primary btn-sm">Generate</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-utensils fa-2x text-success mb-3"></i>
                                    <h6>Food Sales</h6>
                                    <p class="text-muted small">Food items performance analysis</p>
                                    <button class="btn btn-outline-success btn-sm">Generate</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-2x text-warning mb-3"></i>
                                    <h6>Customer Analysis</h6>
                                    <p class="text-muted small">Customer behavior and preferences</p>
                                    <button class="btn btn-outline-warning btn-sm">Generate</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-alt fa-2x text-info mb-3"></i>
                                    <h6>Event Performance</h6>
                                    <p class="text-muted small">Event attendance and revenue</p>
                                    <button class="btn btn-outline-info btn-sm">Generate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
