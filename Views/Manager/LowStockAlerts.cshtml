@model List<MaziyaInnPubVleis.Models.Inventory>
@{
    ViewData["Title"] = "Low Stock Alerts";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-danger">
            <i class="fas fa-exclamation-triangle"></i> Low Stock Alerts
        </h1>
        <div class="btn-group">
            <a href="@Url.Action("StockManagement", "Manager")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Stock
            </a>
            <a href="@Url.Action("Create", "Inventory")" class="btn btn-outline-success">
                <i class="fas fa-plus"></i> Add Product
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-danger">
            <h6><i class="fas fa-exclamation-circle"></i> Attention Required</h6>
            <p class="mb-0">You have <strong>@Model.Count</strong> product(s) that are below their minimum stock levels. Please reorder these items soon.</p>
        </div>

        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-list"></i> Low Stock Items
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="lowStockTable">
                        <thead class="thead-light">
                            <tr>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Current Stock</th>
                                <th>Minimum Level</th>
                                <th>Shortfall</th>
                                <th>Supplier</th>
                                <th>Unit Price</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var shortfall = item.MinimumStockLevel - item.StockLevel;
                                <tr class="table-danger">
                                    <td>
                                        <strong>@item.ProductName</strong>
                                    </td>
                                    <td>@item.Description</td>
                                    <td>
                                        <span class="badge badge-danger badge-pill">@item.StockLevel</span>
                                    </td>
                                    <td>@item.MinimumStockLevel</td>
                                    <td>
                                        <span class="badge badge-warning badge-pill">@shortfall</span>
                                    </td>
                                    <td>
                                        @if (item.Supplier != null)
                                        {
                                            <span>@item.Supplier.Name</span>
                                            <br>
                                            <small class="text-muted">@item.Supplier.ContactPerson</small>
                                            <br>
                                            <small class="text-muted">@item.Supplier.Phone</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Supplier</span>
                                        }
                                    </td>
                                    <td>R @item.UnitPrice.ToString("N2")</td>
                                    <td>
                                        <span class="badge badge-@(item.IsSixPack ? "info" : "secondary")">
                                            @(item.IsSixPack ? "Six-Pack" : "Single Unit")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Edit", "Inventory", new { id = item.ProductId })"
                                               class="btn btn-outline-primary" title="Edit Stock">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Details", "Inventory", new { id = item.ProductId })"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button class="btn btn-outline-success" title="Reorder"
                                                    onclick="reorderProduct(@item.ProductId, '@item.ProductName')">
                                                <i class="fas fa-shopping-cart"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-warning" onclick="alert('Purchase order feature coming soon!')">
                                <i class="fas fa-file-invoice-dollar"></i> Create Bulk Purchase Order
                            </button>
                            <button class="btn btn-info" onclick="printLowStockReport()">
                                <i class="fas fa-print"></i> Print Low Stock Report
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Statistics</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Total Low Stock Items
                                <span class="badge badge-danger badge-pill">@Model.Count</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Six-Pack Items
                                <span class="badge badge-info badge-pill">@Model.Count(i => i.IsSixPack)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Single Unit Items
                                <span class="badge badge-secondary badge-pill">@Model.Count(i => !i.IsSixPack)</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h4 class="text-success">All Stock Levels Are Good!</h4>
                <p class="text-muted">No products are currently below their minimum stock levels.</p>
                <a href="@Url.Action("StockManagement", "Manager")" class="btn btn-primary">
                    <i class="fas fa-boxes"></i> View Complete Inventory
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#lowStockTable').DataTable({
                pageLength: 25,
                order: [[2, 'asc']]
            });
        });

        function reorderProduct(productId, productName) {
            if (confirm(`Create purchase order for ${productName}?`)) {
                alert(`Purchase order creation for ${productName} would be implemented here.`);
                // Implementation for creating purchase order would go here
            }
        }

        function printLowStockReport() {
            window.print();
        }
    </script>
}