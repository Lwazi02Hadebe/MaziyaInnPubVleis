@model List<MaziyaInnPubVleis.Models.Inventory>
@{
    ViewData["Title"] = "Inventory Report";
    var totalValue = ViewBag.TotalInventoryValue as decimal? ?? 0;
    var lowStockItems = ViewBag.LowStockItems as List<MaziyaInnPubVleis.Models.Inventory> ?? new List<MaziyaInnPubVleis.Models.Inventory>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Inventory Report</h1>
        <div class="btn-group">
            <button onclick="window.print()" class="btn btn-outline-primary">
                <i class="fas fa-print"></i> Print
            </button>
            <a href="@Url.Action("Reports", "Manager")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Total Inventory Value</div>
                            <div class="h5 mb-0">R @totalValue.ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Total Products</div>
                            <div class="h5 mb-0">@Model.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Active Products</div>
                            <div class="h5 mb-0">@Model.Count(i => i.IsActive)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Low Stock Items</div>
                            <div class="h5 mb-0">@lowStockItems.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Low Stock Alerts -->
    @if (lowStockItems.Any())
    {
        <div class="card mb-4 border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle"></i> Low Stock Alerts
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Product</th>
                                <th>Current Stock</th>
                                <th>Minimum Level</th>
                                <th>Supplier</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lowStockItems)
                            {
                                <tr class="table-danger">
                                    <td>@item.ProductName</td>
                                    <td>
                                        <span class="badge badge-danger">@item.StockLevel</span>
                                    </td>
                                    <td>@item.MinimumStockLevel</td>
                                    <td>@item.Supplier?.Name</td>
                                    <td>
                                        <span class="badge badge-warning">@item.StockStatus</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Complete Inventory -->
    <div class="card">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">Complete Inventory</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="inventoryTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th>Stock Level</th>
                            <th>Unit Price</th>
                            <th>Cost Price</th>
                            <th>Profit/Unit</th>
                            <th>Total Value</th>
                            <th>Type</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var totalItemValue = item.StockLevel * item.CostPrice;
                            var profitPerUnit = item.UnitPrice - item.CostPrice;

                            <tr class="@(item.StockLevel <= item.MinimumStockLevel ? "table-warning" : "")">
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>
                                    <span class="badge badge-@item.StockStatusClass">@item.StockLevel</span>
                                </td>
                                <td>R @item.UnitPrice.ToString("N2")</td>
                                <td>R @item.CostPrice.ToString("N2")</td>
                                <td>R @profitPerUnit.ToString("N2")</td>
                                <td>R @totalItemValue.ToString("N2")</td>
                                <td>
                                    <span class="badge badge-@(item.IsSixPack ? "info" : "secondary")">
                                        @(item.IsSixPack ? "Six-Pack" : "Single Unit")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-@(item.IsActive ? "success" : "danger")">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#inventoryTable').DataTable({
                pageLength: 25,
                order: [[2, 'asc']]
            });
        });
    </script>
}