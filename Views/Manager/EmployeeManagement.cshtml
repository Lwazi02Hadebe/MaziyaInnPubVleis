@model List<MaziyaInnPubVleis.Models.User>
@{
    ViewData["Title"] = "Employee Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="fas fa-users"></i> Employee Management
        </h1>
        <div class="btn-group">
            <a href="@Url.Action("EmployeeSchedules", "Manager")" class="btn btn-outline-primary">
                <i class="fas fa-user-clock"></i> View Schedules
            </a>
            <a href="@Url.Action("CreateSchedule", "Manager")" class="btn btn-outline-success">
                <i class="fas fa-plus"></i> Create Schedule
            </a>
        </div>
    </div>

    <!-- Employee Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-3">
                    <h6>Total Employees</h6>
                    <h4>@Model.Count</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center py-3">
                    <h6>Cashiers</h6>
                    <h4>@Model.Count(e => e.Role == UserRole.Cashier)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center py-3">
                    <h6>Event Coordinators</h6>
                    <h4>@Model.Count(e => e.Role == UserRole.EventCoordinator)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center py-3">
                    <h6>Active Employees</h6>
                    <h4>@Model.Count(e => e.IsActive)</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Employees Table -->
    <div class="card">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="employeesTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Last Login</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@employee.Username</strong>
                                </td>
                                <td>@employee.Email</td>
                                <td>
                                    <span class="badge badge-@GetRoleBadgeClass(employee.Role)">
                                        @employee.Role
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-@(employee.IsActive ? "success" : "danger")">
                                        @(employee.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    @if (employee.LastLogin != default)
                                    {
                                        <small>@employee.LastLogin.ToString("MMM dd, yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    <small>@employee.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-info"
                                                onclick="viewEmployeeSchedule(@employee.UserId, '@employee.Username')">
                                            <i class="fas fa-calendar"></i> Schedule
                                        </button>
                                        <button class="btn btn-outline-warning"
                                                onclick="viewEmployeeAttendance(@employee.UserId, '@employee.Username')">
                                            <i class="fas fa-user-check"></i> Attendance
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetRoleBadgeClass(UserRole role)
    {
        return role switch
        {
            UserRole.Admin => "danger",
            UserRole.Manager => "warning",
            UserRole.Cashier => "success",
            UserRole.EventCoordinator => "info",
            _ => "secondary"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                pageLength: 25,
                order: [[0, 'asc']]
            });
        });

        function viewEmployeeSchedule(employeeId, employeeName) {
            alert('Viewing schedule for ' + employeeName);
            // Implementation would redirect to schedule view for this employee
        }

        function viewEmployeeAttendance(employeeId, employeeName) {
            alert('Viewing attendance for ' + employeeName);
            // Implementation would redirect to attendance view for this employee
        }
    </script>
}