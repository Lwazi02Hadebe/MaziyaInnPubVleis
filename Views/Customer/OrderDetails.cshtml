@model MaziyaInnPubVleis.Models.Order
@{
    ViewData["Title"] = "Order Details";
    Layout = "_CustomerLayout";
}

<!-- Hero Section -->
<section class="customer-hero">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3">Order Details</h1>
        <p class="lead text-white mb-0">Order #@Model.OrderId</p>
    </div>
</section>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Order Items -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Order Items
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Inventory.ProductName</strong>
                                            @if (item.Inventory.IsSixPack)
                                            {
                                                <span class="badge bg-info ms-2">Six-Pack</span>
                                            }
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>R @item.UnitPrice.ToString("N2")</td>
                                        <td><strong class="text-success">R @item.TotalPrice.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-receipt me-2"></i>Order Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Order Information</h6>
                        <p class="mb-1"><strong>Order ID:</strong> #@Model.OrderId</p>
                        <p class="mb-1"><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                        <p class="mb-1">
                            <strong>Status:</strong>
                            <span class="badge bg-@(Model.Status == MaziyaInnPubVleis.Models.OrderStatus.Completed ? "success" : Model.Status == MaziyaInnPubVleis.Models.OrderStatus.Pending ? "warning" : "danger")">
                                @Model.Status
                            </span>
                        </p>
                        <p class="mb-0"><strong>Processed By:</strong> @Model.ProcessedBy?.Username</p>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <h6>Payment Summary</h6>
                        <div class="d-flex justify-content-between mb-1">
                            <span>Subtotal:</span>
                            <strong>R @((Model.TotalAmount - Model.VATAmount).ToString("N2"))</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>VAT (15%):</span>
                            <strong>R @Model.VATAmount.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>Gross Profit:</span>
                            <strong class="text-success">R @Model.GrossProfit.ToString("N2")</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span class="h6">Total Amount:</span>
                            <strong class="h5 text-success">R @Model.TotalAmount.ToString("N2")</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-2 mt-3">
                <a href="@Url.Action("Orders", "Customer")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Orders
                </a>
                <a href="@Url.Action("Menu", "Customer")" class="btn btn-primary">
                    <i class="fas fa-utensils me-2"></i>Order Again
                </a>
            </div>
        </div>
    </div>
</div>