@model MaziyaInnPubVleis.Models.Cart
@{
    ViewData["Title"] = "Checkout";
    Layout = "_CustomerLayout";
}

<!-- Hero Section -->
<section class="customer-hero">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3">Checkout 💳</h1>
        <p class="lead text-white mb-0">Complete your order</p>
    </div>
</section>

<div class="container py-5">
    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-shopping-bag me-2"></i>Order Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Inventory.ProductName</strong>
                                            @if (item.Inventory.IsSixPack)
                                            {
                                                <span class="badge bg-info ms-2">Six-Pack</span>
                                            }
                                        </td>
                                        <td>R @item.UnitPrice.ToString("N2")</td>
                                        <td>@item.Quantity</td>
                                        <td><strong>R @((item.Quantity * item.UnitPrice).ToString("N2"))</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Customer Information -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Customer Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" value="@ViewBag.Customer?.Name" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="@Context.Session.GetString("CustomerEmail")" readonly>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label">Delivery Address</label>
                            <textarea class="form-control" rows="3" placeholder="Enter delivery address (if applicable)"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Special Instructions</label>
                            <textarea class="form-control" rows="2" placeholder="Any special instructions for your order..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Total & Payment -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-credit-card me-2"></i>Payment Summary
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var subtotal = Model.CartItems.Sum(item => item.Quantity * item.UnitPrice);
                        var vat = subtotal * 0.15m;
                        var total = subtotal + vat;
                    }

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal:</span>
                        <strong>R @subtotal.ToString("N2")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">VAT (15%):</span>
                        <strong>R @vat.ToString("N2")</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5">Total Amount:</span>
                        <strong class="h5 text-success">R @total.ToString("N2")</strong>
                    </div>

                    <!-- Payment Method -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Payment Method</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cash" checked>
                            <label class="form-check-label" for="cash">
                                <i class="fas fa-money-bill-wave me-2 text-success"></i>Cash on Delivery/Pickup
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="card">
                            <label class="form-check-label" for="card">
                                <i class="fas fa-credit-card me-2 text-primary"></i>Credit/Debit Card
                            </label>
                        </div>
                    </div>

                    <!-- Place Order Button -->
                    <form method="post" asp-action="PlaceOrder" id="placeOrderForm">
                        @Html.AntiForgeryToken()
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle me-2"></i>Place Order
                            </button>
                        </div>
                    </form>

                    <!-- Security Notice -->
                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>Your order is secure and encrypted
                        </small>
                    </div>
                </div>
            </div>

            <!-- Need Help -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body text-center">
                    <i class="fas fa-headset fa-2x text-primary mb-3"></i>
                    <h6>Need Help?</h6>
                    <p class="small text-muted mb-2">Call us at (011) 555-1234</p>
                    <a href="#" class="btn btn-outline-primary btn-sm">Contact Support</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submission handling
        document.getElementById('placeOrderForm').addEventListener('submit', function(e) {
            const button = this.querySelector('button[type="submit"]');
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
            button.disabled = true;
        });
    </script>
}
