
@model IEnumerable<MaziyaInnPubVleis.Models.EventBooking>
@{
    ViewData["Title"] = "My Event Bookings";
    Layout = "_CustomerLayout";
}

<!-- Hero Section -->
<section class="customer-hero">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3">My Event Bookings 🎟️</h1>
        <p class="lead text-white mb-0">Manage your event reservations</p>
    </div>
</section>

<div class="container py-5">
    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="card-title mb-0">
                    <i class="fas fa-ticket-alt me-2"></i>Event Bookings
                    <span class="badge bg-warning ms-2">@Model.Count() bookings</span>
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var booking in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@booking.Event.EventName</h5>
                                    <p class="card-text text-muted small">@booking.Event.Description</p>

                                    <div class="booking-details">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Booking ID:</span>
                                            <strong>#@booking.BookingId</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Tickets:</span>
                                            <strong>@booking.NumberOfTickets</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Total Paid:</span>
                                            <strong class="text-success">R @booking.TotalAmount.ToString("N2")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Event Date:</span>
                                            <strong>@booking.Event.EventDate.ToString("MMM dd, yyyy")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Booking Date:</span>
                                            <strong>@booking.BookingDate.ToString("MMM dd, yyyy")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">Status:</span>
                                            <span class="badge bg-@(booking.Status == MaziyaInnPubVleis.Models.BookingStatus.Confirmed ? "success" : "warning")">
                                                @booking.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a href="@Url.Action("EventTicket", new { id = booking.BookingId })" 
                                           class="btn btn-outline-primary btn-sm" target="_blank">
                                            <i class="fas fa-ticket-alt me-1"></i>View Ticket
                                        </a>
                                        <a href="@Url.Action("DownloadEventTicket", new { id = booking.BookingId })" 
                                           class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-download me-1"></i>Download
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card border-0 shadow-sm">
                    <div class="card-body py-5">
                        <i class="fas fa-ticket-alt fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">No Event Bookings</h3>
                        <p class="text-muted mb-4">You haven't booked any events yet.</p>
                        <a href="@Url.Action("Events", "Customer")" class="btn btn-primary btn-lg">
                            <i class="fas fa-calendar-alt me-2"></i>Browse Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
