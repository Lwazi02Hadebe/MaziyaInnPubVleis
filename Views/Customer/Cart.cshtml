@model MaziyaInnPubVleis.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_CustomerLayout";
}

<!-- Hero Section -->
<section class="customer-hero">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3">Shopping Cart 🛒</h1>
        <p class="lead text-white mb-0">Review your items before checkout</p>
    </div>
</section>

<div class="container py-5">
    @if (Model?.CartItems != null && Model.CartItems.Any())
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>Your Cart Items
                            <span class="badge bg-warning text-dark ms-2">@Model.CartItems.Count item(s)</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr id="cartItem-@item.CartItemId">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0">
                                                        <i class="fas fa-@(item.Inventory.IsSixPack ? "box" : "wine-bottle") fa-2x text-primary me-3"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">@item.Inventory.ProductName</h6>
                                                        <p class="text-muted mb-0 small">@item.Inventory.Description</p>
                                                        @if (item.Inventory.IsSixPack)
                                                        {
                                                            <span class="badge bg-info">Six-Pack</span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <strong class="text-primary">R @item.UnitPrice.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                <div class="input-group input-group-sm" style="width: 120px;">
                                                    <button class="btn btn-outline-secondary" type="button"
                                                            onclick="updateQuantity(@item.CartItemId, @item.Quantity - 1)">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" class="form-control text-center"
                                                           id="quantity-@item.CartItemId" value="@item.Quantity"
                                                           min="1" max="50" onchange="updateQuantity(@item.CartItemId, this.value)">
                                                    <button class="btn btn-outline-secondary" type="button"
                                                            onclick="updateQuantity(@item.CartItemId, @item.Quantity + 1)">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td>
                                                <strong class="text-success">R @((item.Quantity * item.UnitPrice).ToString("N2"))</strong>
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-danger btn-sm"
                                                        onclick="removeFromCart(@item.CartItemId)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Continue Shopping -->
                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var subtotal = Model.CartItems.Sum(item => item.Quantity * item.UnitPrice);
                            var vat = subtotal * 0.15m;
                            var total = subtotal + vat;
                        }

                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal:</span>
                            <strong>R @subtotal.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">VAT (15%):</span>
                            <strong>R @vat.ToString("N2")</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="h5">Total:</span>
                            <strong class="h5 text-success">R @total.ToString("N2")</strong>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Checkout", "Customer")" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                            </a>
                        </div>

                        <!-- Security Badges -->
                        <div class="mt-4 text-center">
                            <div class="row">
                                <div class="col-4">
                                    <i class="fas fa-shield-alt text-success fa-2x mb-2"></i>
                                    <div class="small">Secure</div>
                                </div>
                                <div class="col-4">
                                    <i class="fas fa-lock text-primary fa-2x mb-2"></i>
                                    <div class="small">Encrypted</div>
                                </div>
                                <div class="col-4">
                                    <i class="fas fa-truck text-warning fa-2x mb-2"></i>
                                    <div class="small">Fast Delivery</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty Cart -->
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card border-0 shadow-sm">
                    <div class="card-body py-5">
                        <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">Your cart is empty</h3>
                        <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
                        <a href="@Url.Action("Index", "Customer")" class="btn btn-primary btn-lg">
                            <i class="fas fa-utensils me-2"></i>Browse Menu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Update quantity function
        function updateQuantity(cartItemId, newQuantity) {
            if (newQuantity < 1) {
                removeFromCart(cartItemId);
                return;
            }

            if (newQuantity > 50) {
                showNotification('Maximum quantity is 50 per item', 'warning');
                return;
            }

            // Get anti-forgery token
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.post('@Url.Action("UpdateCartItem", "Customer")', {
                cartItemId: cartItemId,
                quantity: newQuantity,
                __RequestVerificationToken: token
            }).done(function(response) {
                if (response.success) {
                    // Update the input field
                    $('#quantity-' + cartItemId).val(newQuantity);
                    // Reload the page to update totals
                    location.reload();
                } else {
                    showNotification(response.message, 'error');
                }
            }).fail(function() {
                showNotification('Error updating quantity', 'error');
            });
        }

        // Remove from cart function
        function removeFromCart(cartItemId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            // Get anti-forgery token
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.post('@Url.Action("RemoveFromCart", "Customer")', {
                cartItemId: cartItemId,
                __RequestVerificationToken: token
            }).done(function(response) {
                if (response.success) {
                    // Remove the row from table
                    $('#cartItem-' + cartItemId).fadeOut(300, function() {
                        $(this).remove();
                        // Reload if cart is empty
                        if ($('tbody tr').length === 0) {
                            location.reload();
                        }
                    });
                    showNotification(response.message, 'success');
                    updateCartCount();
                } else {
                    showNotification(response.message, 'error');
                }
            }).fail(function() {
                showNotification('Error removing item', 'error');
            });
        }
    </script>
}